@model Test.ViewModels.TeacherViewModel
<title>@ViewBag.Title</title>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

<form asp-action="EditTeacher" asp-controller="Teacher" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class=" col-3 mt-1" style="float: left">
            @if (Model.Img != null)
            {<img style="float:left; margin: 4px 7px 2px 4px;" src="@Model.Img" alt="@Model.Name" width="150" height="200" />}
            else
            {<img style="float:left; margin: 4px 7px 2px 4px;" src="/img/avatar.png" alt="@Model.Name" width="150" height="200" />}
            <img id="imgViewer" style="float: left; margin: 4px 7px 2px 4px; border: 1px solid #000000" width="150" height="200" />
        </div>

        <div class=" col-9 md-5" style="float: right">
            <div>
                <center><h1>Добавить преподавателя:</h1></center>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Ф.И.О. преподавателя</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label">Должность преподавателя</label>
                <input type="text" asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер телефона:</label>
                <input type="text" asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="form-group">
                <input id="txtFile" type="file" name="Photo" asp-for="Photo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" name="img" asp-for="Img" class="form-control" />
            </div>

            <div class="form-group ">
                <input type="submit" value="Сохранить" style="font-size: 20px;" class="btn btn-dark" />
            </div>
        </div>
    </div>
</form>


<script type="text/javascript">
    $(document).ready(function () {

    });
    $("#txtFile").change(function (event) {
        var files = event.target.files;
        $("#imgViewer").attr("src", window.URL.createObjectURL(files[0]));
    });
</script>