@model Test.ViewModels.TeacherViewModel
<title>@ViewBag.Title</title>

<form asp-action="EditTeacher" asp-controller="Teacher" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="mt-5 md-2">
        <center><h1>Редактировать преподавателя:</h1></center>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ф.И.О. преподавателя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label">Должность преподавателя</label>
        <input type="text" asp-for="Position" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона:</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <input type="file" name="Photo" asp-for="Photo" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" name="Img" asp-for="Img" class="form-control" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-dark" style="font-size: 20px;" />
    </div>
</form>