@model Test.ViewModels.AcademicGroupViewModel
<title>@ViewBag.Title</title>

<form asp-action="CreateGroup" asp-controller="AcademicGroup" method="post" enctype="multipart/form-data">
    <div class="mt-5 md-2">
        <center><h1>Добавить группу:</h1></center>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Номер группы:</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShortName" class="control-label">Сокращенный номер группы:</label>
        <input type="text" asp-for="ShortName" class="form-control" />
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearOfStudy" class="control-label">Год начала обучения группы:</label>
        <input type="text" asp-for="YearOfStudy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Courses">Курс обучения группы:</label>
        <select asp-for="CourseId" asp-items="@Model.Courses.Select(_=> new SelectListItem { Value = _.Id.ToString(), Text =_.CourseNumber.ToString() })">
            <option value="">Выберите курс обучения</option>
        </select>
        <p><span asp-validation-for="CourseId" class="text-danger"></span></p>
    </div>

    <div class="form-group">
        <label asp-for="Specialities">Специальность обучения группы:</label>
        <select asp-for="SpecialityId" asp-items="@Model.Specialities.Select(_=> new SelectListItem { Value = _.Id.ToString(), Text =_.Name })">
            <option value="">Выберите специальность</option>
        </select>
        <p><span asp-validation-for="SpecialityId" class="text-danger"></span></p>
    </div>

    <div class="form-group">
        <label asp-for="Teachers">Куратор группы:</label>
        <select asp-for="CuratorId" asp-items="@Model.Teachers.Select(_=> new SelectListItem { Value = _.Id.ToString(), Text =_.Name })">
            <option value="">Выберите куратора</option>
        </select>
        <p><span asp-validation-for="CuratorId" class="text-danger"></span></p>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-dark" style="font-size: 20px;" />
    </div>   
</form>
